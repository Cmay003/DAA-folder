#include <bits/stdc++.h>
using namespace std;

int main() {
    int T;
    cin >> T;

    while (T--) {
        int n, k;
        cin >> n;

        int arr[n];
        for (int i = 0; i < n; i++) {
            cin >> arr[i];
        }

        cin >> k;

        sort(arr, arr + n);

        int i = 0, j = 1;
        int count = 0;

        while (i < n && j < n) {
            if (i != j && arr[j] - arr[i] == k) {
                count++;
                i++;
                j++;
            } 
            else if (arr[j] - arr[i] < k) {
                j++;
            } 
            else {
                i++;
                if (i == j) j++;
            }
        }

        cout << count << endl;
    }

    return 0;
}
